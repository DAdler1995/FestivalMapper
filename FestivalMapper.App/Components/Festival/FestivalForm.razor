@page "/festival/{Id:guid}/edit"
@page "/festival/create"

@using FestivalMapper.App.Components.Shared
@using FestivalMapper.App.Libraries

<PageTitle>@(IsNew ? "Create Festival" : "Edit Festival")</PageTitle>

<PageSection Title="@(IsNew ? "Create Festival" : "Edit Festival")">

    <Actions>
        <div class="btn-group" role="group">
            <button type="submit" form="festival-form" class="btn btn-outline-primary">
                <i class="bi bi-floppy"></i> Save
            </button>

            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                <i class="bi bi-x"></i> Cancel
            </button>

            @if (!IsNew)
            {
                <button type="button" class="btn btn-outline-danger" @onclick="ShowDeleteConfirm">
                    <i class="bi bi-trash"></i> Delete
                </button>
            }
        </div>
    </Actions>

    <ChildContent>
        @if (_form is null)
        {
            <Loading />
        }
        else
        {
            <EditForm id="festival-form" Model="_form" OnValidSubmit="SaveAsync">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <InputText class="form-control" @bind-Value="_form.Name" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Start Date</label>
                        <InputDate TValue="DateOnly" class="form-control" @bind-Value="_form.StartDate" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">End Date</label>
                        <InputDate TValue="DateOnly" class="form-control" @bind-Value="_form.EndDate" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">City</label>
                        <InputText class="form-control" @bind-Value="_form.City" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">State</label>
                        <InputText class="form-control" @bind-Value="_form.State" />
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label d-block">Festival Map (image)</label>

                    @if (!string.IsNullOrEmpty(_mapError))
                    {
                        <div class="text-danger small mt-1">@_mapError</div>
                    }

                    <div class="d-flex flex-column gap-2">
                        <InputFile OnChange="OnMapSelected" accept="image/*" />

                        @if (!string.IsNullOrEmpty(_form.MapImageBase64) && !string.IsNullOrEmpty(_form.MapImageContentType))
                        {
                            <div class="border rounded p-2">
                                <img src="@ImageHelper.BuildDataUrl(_form.MapImageContentType, _form.MapImageBase64)" alt="Map preview" class="img-fluid rounded mx-auto d-block" />
                            </div>

                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-outline-danger btn-sm" @onclick="RemoveMap">
                                    <i class="bi bi-x-circle"></i> Remove
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="text-muted small">No map selected.</div>
                        }
                    </div>
                </div>
            </EditForm>
        }
    </ChildContent>

</PageSection>



<ConfirmModal @ref="_deleteModal"
              Title="Confirm Delete"
              Message="@($"Are you sure you want to delete <strong>{_form?.Name}</strong>? This action cannot be undone.")"
              ConfirmText="Delete"
              CancelText="Cancel"
              ConfirmButtonClass="btn btn-danger"
              CancelButtonClass="btn btn-outline-secondary"
              OnConfirm="DeleteAsync"
              Centered="true"
              Dark="true"
              StaticBackdrop="true" />