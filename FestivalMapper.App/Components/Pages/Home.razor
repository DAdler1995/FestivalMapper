@page "/"
@using FestivalMapper.App.Components.Home
@using FestivalMapper.App.Components.Layout

<div class="row">
    <div class="col">
        <h1>
            Welcome to <span class="text-primary">Festival Mapper</span>!
        </h1>
        <p class="text-muted">The #1 app for keeping track and planning your festival experience regardless of internet connection.</p>
    </div>
</div>

<div class="row">
    <div class="col">
        <h3 class="text-primary text-uppercase display-3">Upcomming Festivals</h3>
    </div>
</div>

<div class="row">
    <div class="col">
        <ul class="list-group list-group-flush">
            @for (int i = 0; i < 7; i++)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start gradient gradient-primary my-1 rounded-2" role="button">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">
                            Festival @i
                        </div>
                    </div>                
                    <i class="bi bi-share"></i>
                </li>
            }
        </ul>
    </div>
</div>

<div class="row mt-5">
    <div class="col">
        <h3 class="text-secondary text-uppercase display-3">Past Festivals</h3>
    </div>
</div>

<div class="row">
    <div class="col">
        <ul class="list-group list-group-flush">
            @for (int i = 0; i < 8; i++)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start gradient gradient-secondary my-1 rounded-2" style="opacity: 0.85;" role="button">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">
                            Festival @i
                        </div>
                    </div>                
                    <i class="bi bi-share"></i>
                </li>
            }
        </ul>
    </div>
</div>


@code {
  [Inject] NavigationManager Nav { get; set; } = default!;

  Task HandleFindFestival()
  {
      Nav.NavigateTo("/search");
      return Task.CompletedTask;
  }

  Task HandleScanQr()
  {
      // TODO: open QR flow / permission prompt
      // e.g., show a dialog component or navigate to /scan
      Nav.NavigateTo("/scan");
      return Task.CompletedTask;
  }

  Task HandleOpenSchedule()
  {
      Nav.NavigateTo("/schedule");
      return Task.CompletedTask;
  }
}
